{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/feed",
        "destination": "/feed.html"
      },
      {
        "source": "/criadora",
        "destination": "/criadora.html"
      },
      {
        "source": "/user-profile",
        "destination": "/user-profile.html"
      },
      {
        "source": "/create-post",
        "destination": "/create-post.html"
      },
      {
        "source": "/post-detail",
        "destination": "/post-detail.html"
      },
      {
        "source": "/chat",
        "destination": "/chat.html"
      },
      {
        "source": "/notifications",
        "destination": "/notifications.html"
      },
      {
        "source": "/zafyre-pay",
        "destination": "/zafyre-pay.html"
      },
      {
        "source": "/zafyre-shop",
        "destination": "/zafyre-shop.html"
      },
      {
        "source": "/zafyre-creators",
        "destination": "/zafyre-creators.html"
      },
      {
        "source": "/subscriptions",
        "destination": "/subscriptions.html"
      },
      {
        "source": "/settings",
        "destination": "/settings.html"
      },
      {
        "source": "/support",
        "destination": "/support.html"
      },
      {
        "source": "/terms-of-service",
        "destination": "/terms-of-service.html"
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy-policy.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
